<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_primary_material_light"/>
            <padding android:bottom="5dp" android:left="5dp" android:top="5dp" android:right="5dp"/>

        </shape>
    </item>
    <item android:state_focused="true" >
        <shape android:shape="rectangle">
            <solid android:color="@color/color_primary_dark_material_light"/>
            <padding android:bottom="5dp" android:left="5dp" android:top="5dp" android:right="5dp"/>

        </shape>
    </item>

    <item >
        <shape android:shape="rectangle">
            <solid android:color="@color/color_primary_dark_material_light"/>
            <padding android:bottom="5dp" android:left="5dp" android:top="5dp" android:right="5dp"/>

        </shape>
    </item>


</selector>